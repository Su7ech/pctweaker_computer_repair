.container
	.carousel.slide(id="pctweaker-carousel", data-ride="carousel")
		ol.carousel-indicators
			li(data-target="#pctweaker-carousel", data-slide-to="0").active
			li(data-target="#pctweaker-carousel", data-slide-to="1")
			li(data-target="#pctweaker-carousel", data-slide-to="2")
		.carousel-inner(role="listbox")
			.item.active
				img(src="http://placehold.it/1200x350", alt="banner-1")
			.item
				img(src="http://placehold.it/1200x350", alt="banner-2")
			.item
				img(src="http://placehold.it/1200x350", alt="banner-3")
		a.left.carousel-control(href="#pctweaker-carousel", role="button", data-slide="prev")
			span.glyphicon.glyphicon-chevron-left(aria-hidden="true")
			span.sr-only Previous
		a.right.carousel-control(href="#pctweaker-carousel", role="button", data-slide="next")
			span.glyphicon.glyphicon-chevron-right(aria-hidden="true")
			span.sr-only Next
